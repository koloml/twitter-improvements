{
  "manifest_version": 3,
  "name": "Improvements for Twitter",
  "version": "1.1.1.1",
  "author": "usy",
  "homepage_url": "https://github.com/usyless/twitter-improvements",
  "description": "Various helpful additions and changes for Twitter",
  "icons": {
    "96": "icons/icon-96.png"
  },
  "action": {
    "default_icon": "icons/icon-96.png",
    "default_title": "Image Reverser",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "contextMenus",
    "downloads",
    "clipboardWrite",
    "storage",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://x.com/*",
    "https://video.twimg.com/*",
    "https://pbs.twimg.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "twitter_improvements.js"
      ],
      "css": [
        "twitter_improvements.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "element_hiding.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "/settings/settings.html"
  }
}