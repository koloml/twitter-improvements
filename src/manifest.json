{
  "manifest_version": 2,
  "name": "Improvements for Twitter",
  "version": "1.1.1.3",
  "author": "usy",
  "homepage_url": "https://github.com/usyless/twitter-improvements",
  "description": "Various helpful additions and changes for Twitter",
  "icons": {
    "96": "/icons/icon-96.png"
  },
  "browser_action": {
    "default_icon": "/icons/icon-96.png",
    "default_title": "Settings",
    "default_popup": "/popup/popup.html"
  },
  "permissions": [
    "contextMenus",
    "downloads",
    "clipboardWrite",
    "storage",
    "webRequest",
    "https://x.com/*",
    "https://video.twimg.com/*",
    "https://pbs.twimg.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "/twitter_improvements.js"
      ],
      "css": [
        "/twitter_improvements.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "/element_hiding.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "/settings/settings.html"
  }
}
